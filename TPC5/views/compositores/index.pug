block content
    head
        title=compositor.id
        meta(charset='utf-8')
        link(rel='icon' href='favicon.png')
        link(rel='stylesheet' href='/w3.css')
    body
        .w3-card-4
            header.w3-container.w3-green
                h1=compositor.nome
            .w3-container
                ul.w3-ul.w3-card-4(style='width:50%')
                    li
                        b ID:
                        |  #{compositor.id}
                    li
                        b Data nascimento:
                        |  #{compositor.dataNasc}
                    li
                        b Data obito:
                        | #{compositor.dataObito}
                    li
                        b Periodo:
                        | #{compositor.periodo}
                    li
                        b Bio:
                        | #{compositor.bio}
            footer.w3-container.w3-green
                address
                | Gerado por galuno::EngWeb2024 - [
                a(href='/compositores') Voltar
                | ]
